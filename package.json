{
  "name": "codelace",
  "version": "1.0.0",
  "description": "A modern, lightweight CSS framework with TypeScript components",
  "main": "dist/js/codelace.js",
  "module": "dist/js/codelace.esm.js",
  "types": "types/index.d.ts",
  "style": "dist/css/codelace.css",
  "files": [
    "dist/",
    "types/",
    "scss/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "start": "vite",
    "build": "npm run clean && npm run build:js && npm run build:css",
    "build:js": "cross-env NODE_ENV=production rollup -c build/rollup.config.mjs",
    "build:css": "npm run css:compile && npm run css:prefix && npm run css:minify",
    "build:dev": "cross-env NODE_ENV=development rollup -c build/rollup.config.mjs",
    "css:compile": "sass scss/codelace.scss dist/css/codelace.css --style expanded --source-map",
    "css:prefix": "postcss dist/css/codelace.css --config build/postcss.config.mjs --replace",
    "css:minify": "cleancss -O2 --format breakWith=lf --with-rebase --source-map --source-map-inline-sources --output dist/css/codelace.min.css dist/css/codelace.css",
    "clean": "rimraf dist types coverage",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint js/src/**/*.ts",
    "lint:css": "stylelint scss/**/*.scss",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run build && git add -A dist",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/teckmill/CodeLace.git"
  },
  "keywords": [
    "css",
    "sass",
    "mobile-first",
    "responsive",
    "front-end",
    "framework",
    "web",
    "typescript",
    "components",
    "ui",
    "accessibility"
  ],
  "author": "teckmill",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/teckmill/CodeLace/issues"
  },
  "homepage": "https://github.com/teckmill/CodeLace#readme",
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.8",
    "@babel/preset-typescript": "^7.23.3",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "autoprefixer": "^10.4.16",
    "clean-css-cli": "^5.6.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.33",
    "postcss-cli": "^11.0.0",
    "rimraf": "^5.0.10",
    "rollup": "^4.9.5",
    "sass": "^1.69.7",
    "stylelint": "^16.1.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.5.0"
  },
  "peerDependencies": {
    "@floating-ui/dom": "^1.5.0"
  },
  "browserslist": [
    ">= 0.5%",
    "last 2 major versions",
    "not dead",
    "Chrome >= 60",
    "Firefox >= 60",
    "Firefox ESR",
    "iOS >= 12",
    "Safari >= 12",
    "not Explorer <= 11"
  ]
}
