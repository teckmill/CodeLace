{
  "name": "codelace",
  "version": "1.0.1",
  "description": "A modern, lightweight CSS framework with TypeScript components",
  "main": "dist/js/codelace.js",
  "module": "dist/js/codelace.esm.js",
  "types": "types/index.d.ts",
  "style": "dist/css/codelace.css",
  "sass": "scss/codelace.scss",
  "exports": {
    ".": {
      "import": "./dist/js/codelace.esm.js",
      "require": "./dist/js/codelace.js",
      "types": "./types/index.d.ts"
    },
    "./css": "./dist/css/codelace.css",
    "./scss": "./scss/codelace.scss"
  },
  "files": [
    "dist/",
    "types/",
    "scss/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "start": "vite",
    "build": "npm run clean && npm run build:js && npm run build:css",
    "build:js": "npx cross-env NODE_ENV=production rollup -c build/rollup.config.mjs",
    "build:dev": "NODE_ENV=development rollup -c build/rollup.config.mjs",
    "build:css": "npm run css:compile && npm run css:prefix && npm run css:minify",
    "css:compile": "sass scss/codelace.scss dist/css/codelace.css --style expanded --source-map",
    "css:prefix": "postcss dist/css/codelace.css --config build/postcss.config.mjs --replace",
    "css:minify": "cleancss -O2 --format breakWith=lf --output dist/css/codelace.min.css dist/css/codelace.css 2>&1 | grep -v 'Invalid animation value'",
    "clean": "npx rimraf dist types coverage",
    "lint:js": "eslint js/src/**/*.ts",
    "lint:css": "stylelint scss/**/*.scss",
    "lint": "npm run lint:js && npm run lint:css",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=lcov",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run build && git add -A dist",
    "postversion": "git push && git push --tags",
    "release": "npm run build && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/teckmill/CodeLace.git"
  },
  "keywords": [
    "css",
    "sass",
    "mobile-first",
    "responsive",
    "front-end",
    "framework",
    "web",
    "typescript",
    "components",
    "ui",
    "accessibility",
    "modern",
    "lightweight",
    "modular"
  ],
  "author": {
    "name": "teckmill",
    "url": "https://github.com/teckmill"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/teckmill/CodeLace/issues"
  },
  "homepage": "https://github.com/teckmill/CodeLace#readme",
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.8",
    "@babel/preset-typescript": "^7.23.3",
    "@eslint/js": "^8.56.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@typescript-eslint/type-utils": "^6.21.0",
    "@typescript-eslint/utils": "^6.21.0",
    "autoprefixer": "^10.4.16",
    "clean-css-cli": "^5.6.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.8.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.33",
    "postcss-cli": "^11.0.0",
    "rimraf": "^4.4.0",
    "rollup": "^4.9.5",
    "sass": "^1.69.7",
    "stylelint": "^16.1.0",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "vite": "^5.0.11"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard-scss",
      "stylelint-config-prettier-scss"
    ],
    "rules": {
      "scss/no-global-function-names": null,
      "scss/at-if-no-null": null,
      "declaration-empty-line-before": null,
      "rule-empty-line-before": null,
      "no-descending-specificity": null,
      "no-duplicate-selectors": null,
      "color-function-notation": null,
      "alpha-value-notation": null,
      "color-hex-length": null,
      "value-keyword-case": null,
      "scss/comment-no-empty": null,
      "scss/dollar-variable-empty-line-before": null,
      "declaration-block-no-redundant-longhand-properties": null,
      "selector-not-notation": null,
      "scss/at-extend-no-missing-placeholder": null,
      "media-feature-range-notation": null
    }
  },
  "dependencies": {
    "@floating-ui/dom": "^1.5.0"
  },
  "peerDependencies": {
    "@floating-ui/dom": "^1.5.0"
  },
  "browserslist": [
    ">= 0.2%",
    "not dead",
    "last 2 versions",
    "Firefox ESR",
    "not op_mini all"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/teckmill"
  },
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[tj]s?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json",
          "diagnostics": {
            "warnOnly": true
          }
        }
      ]
    },
    "roots": [
      "<rootDir>/__tests__",
      "<rootDir>/js/src"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(@codelace)/)"
    ]
  }
}
