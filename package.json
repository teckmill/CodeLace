{
  "name": "codelace",
  "version": "1.0.0",
  "description": "A modern, lightweight CSS framework for web development",
  "main": "dist/js/codelace.js",
  "module": "dist/js/codelace.esm.js",
  "style": "dist/css/codelace.css",
  "scripts": {
    "start": "vite",
    "build": "npm run build:js && npm run build:css",
    "build:js": "rollup -c build/rollup.config.mjs",
    "build:css": "postcss scss/codelace.scss -o dist/css/codelace.css",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint js/src/**/*.ts",
    "lint:css": "stylelint scss/**/*.scss",
    "test": "jest",
    "bundlewatch": "bundlewatch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/teckmill/CodeLace.git"
  },
  "keywords": [
    "css",
    "sass",
    "mobile-first",
    "responsive",
    "front-end",
    "framework",
    "web",
    "typescript",
    "components",
    "ui",
    "accessibility"
  ],
  "author": "teckmill",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/teckmill/CodeLace/issues"
  },
  "homepage": "https://github.com/teckmill/CodeLace#readme",
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.8",
    "@babel/preset-typescript": "^7.23.3",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "autoprefixer": "^10.4.16",
    "bundlewatch": "^0.3.3",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.33",
    "postcss-cli": "^11.0.0",
    "rollup": "^4.9.5",
    "sass": "^1.69.7",
    "stylelint": "^16.1.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.5.3",
    "@popperjs/core": "^2.11.8"
  },
  "browserslist": [
    ">= 0.5%",
    "last 2 major versions",
    "not dead",
    "Chrome >= 60",
    "Firefox >= 60",
    "Firefox ESR",
    "iOS >= 12",
    "Safari >= 12",
    "not Explorer <= 11"
  ]
}
