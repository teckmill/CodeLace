{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2015", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "dist/js",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["js/src/*"]
    }
  },
  "include": [
    "js/src/**/*", 
    "__tests__/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
